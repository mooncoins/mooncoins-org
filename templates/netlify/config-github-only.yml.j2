backend:
  name: github
  repo: {{  netlifyConfig.repo }}
  branch: main
  base_url: https://us-central1-sonorous-shore-313203.cloudfunctions.net # The base URL for our custom github oauth firebase function
  auth_endpoint: /oauth/auth # The path to the OAuth endpoint of the function
site_url: {{  netlifyConfig.site_url }}
publish_mode: editorial_workflow
media_folder: public/img
public_folder: img
collections:
  - name: "general"
    label: "General Site Information"
    files:
      - label: "Site Information"
        name: "metadata"
        file: "content/metadata.md"
        fields:
          - { label: "Site Title", name: "title", widget: "string" }
          - label: "Favicon (small image in top browser tab)"
            name: "favicon"
            widget: "image"
          - label: Site Color Theme
            name: theme
            widget: object
            fields:
              - label: Light/Dark Mode
                name: mode
                widget: select
                options:
                  - light
                  - dark
              - label: Color Palette
                name: palette
                widget: object
                fields:
                  - label: Primary Color
                    name: primary
                    widget: color
                    allowInput: true
                    enableAlpha: true
                  - label: Secondary Color
                    name: secondary
                    widget: color
                    allowInput: true
                    enableAlpha: true
  - name: "pages"
    label: "Pages"
    files:
      - label: "Home Page"
        name: "homePage"
        file: "content/root.md"
        fields:
          - { label: "Title", name: "title", widget: "string" }
          - { label: "Date", name: "date", widget: "datetime" }
          - { label: "Body", name: "body", widget: "markdown" }
          - label: "Link Categories"
            name: "categories"
            widget: list
            fields:
              - {
                  label: "Section Title (not displayed, reference only)",
                  name: "title",
                  widget: "string",
                }
              - {
                  label: "Anchor ID for Section Scroll",
                  name: "anchorId",
                  widget: "string",
                }
              - {
                  label: "Section Header (displayed)",
                  name: "header",
                  widget: "string",
                }
              - label: "Links in Section"
                name: "linksList"
                widget: list
                fields:
                  - {
                      label: "Link Text to Display",
                      name: "name",
                      widget: "string",
                    }
                  - { label: "Associated URL", name: "url", widget: "string" }
          - label: Call To Action
            name: callToAction
            widget: object
            fields:
              - { label: Title, name: title, widget: string }
              - { label: Description, name: description, widget: text }
              - { label: Button Text, name: button, widget: text }
